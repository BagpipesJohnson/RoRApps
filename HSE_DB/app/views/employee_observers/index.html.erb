<h1>Listing Employee Observers</h1>

<table>
  <thead>
    <tr>
      <th>Region</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_observers.each do |employee_observer| %>
      <tr>
        <td><%= employee_observer.region %></td>
        <td><%= employee_observer.first_name %></td>
        <td><%= employee_observer.last_name %></td>
        <td><%= link_to 'Show', employee_observer %></td>
        <td><%= link_to 'Edit', edit_employee_observer_path(employee_observer) %></td>
        <td><%= link_to 'Destroy', employee_observer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

