<h1>Listing Comments</h1>
<%= link_to 'Articles Home', articles_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.commenter %></td>
      <td><%= comment.body %></td>
      <td><%= link_to 'Show', article_comment_path(comment) %></td>
      <td><%= link_to 'Edit', edit_article_comment_path (comment) %></td>
      <td><%= link_to 'Destroy Comment', [comment.article, comment],
                        method: :delete,
                        data: { confirm: 'Are you sure?'}  %>
    </tr>
  <% end %>
</table>