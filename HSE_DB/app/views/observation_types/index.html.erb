<p id="notice"><%= notice %></p>

<h1>Listing Observation Types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @observation_types.each do |observation_type| %>
      <tr>
        <td><%= observation_type.description %></td>
        <td><%= link_to 'Show', observation_type %></td>
        <td><%= link_to 'Edit', edit_observation_type_path(observation_type) %></td>
        <td><%= link_to 'Destroy', observation_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

